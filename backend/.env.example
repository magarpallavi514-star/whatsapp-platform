# Server Configuration
PORT=5050
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Secret (for encrypting WhatsApp tokens)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Meta WhatsApp API Configuration
WHATSAPP_API_VERSION=v21.0
WHATSAPP_BUSINESS_ACCOUNT_ID=your_waba_id
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# WhatsApp Platform API Key
# Generate using: node generate-api-key.js <accountId>
WHATSAPP_API_KEY=wpk_live_<your_api_key>
# AWS S3 Configuration (for invoice storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=invoices-bucket-name
AWS_S3_INVOICE_PATH=invoices/

# Cashfree Payment Gateway
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_CLIENT_SECRET=your_cashfree_client_secret
CASHFREE_API_URL=https://api.cashfree.com